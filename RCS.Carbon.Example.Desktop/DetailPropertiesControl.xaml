<main:BaseControl x:Class="RCS.Carbon.Example.Desktop.DetailPropertiesControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:main="clr-namespace:RCS.Carbon.Example.Desktop"
        xmlns:model="clr-namespace:RCS.Carbon.Example.Desktop.Model"
        xmlns:kit="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        x:ClassModifier="internal"
        d:DesignHeight="450" d:DesignWidth="800">

    <kit:PropertyGrid SelectedObject="{Binding SelectedNode.Props}" ShowSummary="False" ShowSortOptions="False" ShowSearchBox="False" IsReadOnly="True" FontSize="{Binding AppFontSize}"/>

</main:BaseControl>
